<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/myLong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:editable="false"
        android:visibility="gone"
        android:ems="10" />

 <EditText
     android:id="@+id/myLat"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_weight="0.13"
     android:editable="false"
     android:visibility="gone" >
  
  <requestFocus></requestFocus>  
 </EditText>

 <TextView
     android:id="@+id/cityName_local"
     android:layout_width="wrap_content"
     android:layout_marginTop="20dp"
     android:layout_height="45dp"
     android:layout_weight="0.13"
     android:gravity="center_horizontal"
     android:text="City Name Here" />

 <com.facebook.samples.hellofacebook.FButton
     android:id="@+id/btnNewLocChallenge"
     android:layout_width="250dp"
     android:layout_height="wrap_content"
     android:layout_marginBottom="10dp"
     android:layout_marginTop="20dp"
     android:text="New Challenge"
     fbutton:buttonColor="@color/TOPIX_RED" />

 <ListView
     android:id="@+id/challengeList"
     android:layout_width="match_parent"
     android:layout_height="fill_parent" >

 </ListView>
 
</LinearLayout>  
