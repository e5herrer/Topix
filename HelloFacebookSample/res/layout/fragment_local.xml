<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    
 android:orientation="vertical"  
 android:layout_width="fill_parent"  
 android:layout_height="fill_parent"  
 android:background="@drawable/background9"
 android:weightSum="1">

    <EditText
        android:id="@+id/myLong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:editable="false"
        android:visibility="gone"
        android:ems="10" />

 <EditText
     android:id="@+id/myLat"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_weight="0.13"
     android:editable="false"
     android:visibility="gone" >
  
  <requestFocus></requestFocus>  
 </EditText>  

 <LinearLayout
     android:id="@+id/layButtonH"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_weight="0.08"
     android:gravity="center" >

     <TextView
         android:id="@+id/cityName_local"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         
         android:text="City Name Here" />

      <com.facebook.samples.hellofacebook.FButton
          android:id="@+id/btnNewLocChallenge"
          android:layout_width="250dp"
          android:layout_height="45dp"
          android:text="New Challenge"
          fbutton:buttonColor="@color/fbutton_color_emerald" />
   
 </LinearLayout>

 <ListView
     android:id="@+id/challengeList"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_weight="0.13" >
 </ListView>
 
</LinearLayout>  
